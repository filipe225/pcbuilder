extends template.pug

mixin mycard(content)
    .card.card-blue-light
        a(href= '/admin/' + content.url, class="link-button")= content.text

block content

    - 
        var link_buttons = [
                { url: 'computer_set/', text: 'View Computer Sets' },
                { url: 'computer/', text: 'View Computer List' },        
                { url: 'cpu/', text: 'View CPU List' },
                { url: 'cooler/', text: 'View Cooler List' },
                { url: 'storage/', text: 'View Storage List' },
                { url: 'pccase/', text: 'View PC Case List' },
                { url: 'gpu/', text: 'View Graphics Card List' },      
                { url: 'motherboard/', text: 'View Motherboard List' },
                { url: 'psu/', text: 'View Power Supply List' },
                { url: 'ram/', text: 'View RAM List' }
        ]

    .row
        each link_button in link_buttons 
            .col-4 
                +mycard(link_button) 
